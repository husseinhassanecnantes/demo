        {% endblock %}
    </head>
    <body class="d-flex flex-column">
    <header>
        {{ include('_navbar.html.twig') }}
    </header>
    <main class="flex-grow-1">
        {% block body %}{% endblock %}
    </main>
    <footer class="text-center my-4">
        &copy; ENI formation {{ 'now'|date('Y') }}
    </footer>

    </body>
</html>
